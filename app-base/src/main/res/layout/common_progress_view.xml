<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:loadingView="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">


    <ProgressBar
        android:id="@+id/common_progress"
        android:layout_width="@dimen/loading_icon_80x80"
        android:layout_height="@dimen/loading_icon_80x80"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_toLeftOf="@+id/tv_progress"
        android:indeterminateDrawable="@drawable/progress_loading"
        android:indeterminateDuration="1000"
        android:indeterminateOnly="true"
        android:maxWidth="@dimen/loading_icon_80x80"
        android:maxHeight="@dimen/loading_icon_80x80"
        android:minWidth="@dimen/loading_icon_80x80"
        android:minHeight="@dimen/loading_icon_80x80"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:textColor="@color/text_color_33"
        android:textSize="@dimen/txt_size_14" />


</LinearLayout>
